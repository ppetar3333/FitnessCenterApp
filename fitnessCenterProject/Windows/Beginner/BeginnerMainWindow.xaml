<Window x:Class="fitnessCenterProject.Windows.BeginnerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitnessCenterProject.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Title="Beginner" Height="600" Width="800">
    <Grid>
        <Button Background="gray" Content="LogOut" HorizontalAlignment="Left" Margin="256,498,0,0" VerticalAlignment="Top" Width="100" Height="33" Click="logOutButton"/>
        <Button Background="gray" Content="Exit" HorizontalAlignment="Left" Margin="424,498,0,0" VerticalAlignment="Top" Width="100" Height="33" Click="exitTheApp"/>
        <DataGrid AutoGeneratedColumns="changeVisibilityBeginners" BorderBrush="Black" SelectedItem="{Binding Path=selectedBeginner}" AutoGenerateColumns="True" IsReadOnly="True" Name="beginnerDataInformationDataGrid" HorizontalAlignment="Left" Height="56" Margin="141,181,0,0" VerticalAlignment="Top" Width="529"/>
        <Separator HorizontalAlignment="Left" Height="31" Margin="101,62,0,0" VerticalAlignment="Top" Width="609"/>
        <Label FontWeight="Bold" FontSize="20" Content="Beginner" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="345,20,0,0" Width="161"/>
        <Label FontWeight="Bold" FontSize="15"  Content="User Data Informations" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="307,116,0,0"/>
        <Button Background="Gray" Content="Change Data" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="199,273,0,0" Height="33" Click="changeOwnData"/>
        <Button Background="Gray" Content="Check Instructor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="104" Margin="497,273,0,0" Height="33" Click="checkInstructors"/>
        <Button Background="Gray" Content="Search Instructors" HorizontalAlignment="Left" VerticalAlignment="Top" Width="121" Margin="334,273,0,0" Height="33" Click="searchInstructors"/>
        <DataGrid  AutoGeneratedColumns="changeVisibilityTrainings" BorderBrush="Black" AutoGenerateColumns="True" IsReadOnly="True" Name="trainingInformations" HorizontalAlignment="Left" Height="78" Margin="141,388,0,0" VerticalAlignment="Top" Width="529"/>
        <Label FontWeight="Bold" FontSize="15"  Content="Trainings Informations" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="307,335,0,0"/>

    </Grid>
</Window>
