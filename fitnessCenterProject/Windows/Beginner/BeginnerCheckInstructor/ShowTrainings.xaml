<Window x:Class="fitnessCenterProject.Windows.Beginner.BeginnerCheckInstructor.ShowTrainings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Title="Trainings" Height="460" Width="800">
    <Grid>
        <DataGrid SelectedItem="{Binding Path=selectedTraining}" AutoGeneratedColumns="changeVisibilityTrainings" Name="trainingInfo" BorderBrush="Black" IsReadOnly="True" HorizontalAlignment="Left" Height="98" VerticalAlignment="Top" Width="598" Margin="104,161,0,0" CanUserAddRows="True" CanUserDeleteRows="True"/>
        <Separator HorizontalAlignment="Left" Height="44" Margin="79,63,0,0" VerticalAlignment="Top" Width="653"/>
        <Label FontWeight="Bold" FontSize="20" Content="Trainings" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="339,26,0,0" Width="156"/>
        <Label FontWeight="Bold" FontSize="14" Content="Trainings data" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="339,112,0,0"/>
        <Button Background="Gray" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Margin="311,373,0,0" Height="27" Click="closeButton"/>
        <Button Background="Gray" Content="Book Training" HorizontalAlignment="Left" VerticalAlignment="Top" Width="137" Margin="219,300,0,0" Height="39" RenderTransformOrigin="1.057,0.359" Click="bookTraining"/>
        <Button Background="Gray" Content="Cancel The Reservation" HorizontalAlignment="Left" VerticalAlignment="Top" Width="137" Margin="420,300,0,0" Height="39" Click="cancelTheReservation"/>

    </Grid>
</Window>
