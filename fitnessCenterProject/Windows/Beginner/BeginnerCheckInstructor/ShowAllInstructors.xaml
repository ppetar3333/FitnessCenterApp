<Window x:Class="fitnessCenterProject.Windows.Beginner.BeginnerCheckInstructor.ShowAllInstructors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fitnessCenterProject.Windows.Beginner.BeginnerCheckInstructor"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        Title="Show All Instructors" Height="400" Width="700">
    <Grid>
        <Label FontWeight="Bold" FontSize="20" Content="All instructors" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="257,27,0,0" Width="156"/>
        <Separator HorizontalAlignment="Left" Height="44" Margin="55,69,0,0" VerticalAlignment="Top" Width="560"/>
        <DataGrid SelectedItem="{Binding Path=selectedInstructor}" AutoGeneratedColumns="changeVisibilityInstructors" Name="instructorsInfo" BorderBrush="Black" IsReadOnly="True" HorizontalAlignment="Left" Height="104" VerticalAlignment="Top" Width="515" Margin="73,158,0,0"/>
        <Button Background="Gray" Content="Select" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Margin="180,307,0,0" Height="39" Click="selectButton"/>
        <Label FontWeight="Bold" FontSize="14" Content="Instructors data" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="271,113,0,0"/>
        <Button Background="Gray" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Margin="374,307,0,0" Height="39" Click="closeButton"/>
    </Grid>
</Window>
